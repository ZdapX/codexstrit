<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header') %>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="p-6 md:p-12">

    <!-- Header Section -->
    <header class="text-center mb-12">
        <h1 class="text-5xl font-bold mb-2">&lt;/&gt; Source Code</h1>
        <a href="/profile-legends" class="btn-cyber text-sm">INFO üëë</a>
    </header>

    <!-- Search Bar -->
    <div class="max-w-3xl mx-auto mb-12">
        <input type="text" id="searchInput" placeholder="Search projects (e.g. React, Python)..." 
               class="w-full bg-zinc-900 border border-zinc-800 p-5 rounded-[2.5rem] focus:outline-none focus:border-red-600">
    </div>

    <!-- Project List -->
    <div class="grid grid-cols-1 gap-6 max-w-5xl mx-auto">
        <% projects.forEach(project => { %>
        <a href="/project/<%= project._id %>" class="cyber-card p-6 flex justify-between items-center group">
            <div>
                <h3 class="text-xl font-bold group-hover:text-red-600 transition"><%= project.name %></h3>
                <span class="text-zinc-500 text-sm"><%= project.language %> ‚Ä¢ <%= project.type %></span>
            </div>
            <div class="flex gap-6 text-sm">
                <span>‚ù§Ô∏è <%= project.likes %></span>
                <span>‚¨áÔ∏è <%= project.downloads %></span>
            </div>
        </a>
        <% }) %>
    </div>

    <!-- Chat Admin Section -->
    <section class="max-w-5xl mx-auto mt-24 mb-32">
        <h2 class="text-2xl font-bold mb-8 text-center">COMMUNICATION CENTER</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Card SilverHold -->
            <div class="cyber-card p-8 text-center">
                <img src="/img/silverhold.jpg" class="w-20 h-20 rounded-full mx-auto mb-4 border-2 border-red-600">
                <h4 class="font-bold">SilverHold Official</h4>
                <p class="text-xs text-zinc-400 my-2 italic">"Jangan lupa sholat walaupun kamu seorang pendosa..."</p>
                <button onclick="openChat('SilverHold')" class="btn-cyber w-full mt-4">CHAT ADMIN</button>
            </div>
            <!-- Card Brayn -->
            <div class="cyber-card p-8 text-center">
                <img src="/img/brayn.jpg" class="w-20 h-20 rounded-full mx-auto mb-4 border-2 border-red-600">
                <h4 class="font-bold">Brayn Official</h4>
                <p class="text-xs text-zinc-400 my-2 italic">"Tidak Semua Orang Suka Kita Berkembang Pesat!"</p>
                <button onclick="openChat('Brayn')" class="btn-cyber w-full mt-4">CHAT OWNER</button>
            </div>
        </div>
    </section>

    <!-- Bottom Nav -->
    <nav class="nav-pill">
        <a href="/" class="text-red-600">Home</a>
        <a href="/login">Admin</a>
    </nav>

    <script>
        // Real-time Search Logic
        document.getElementById('searchInput').addEventListener('input', (e) => {
            const val = e.target.value.toLowerCase();
            document.querySelectorAll('.cyber-card').forEach(card => {
                const text = card.innerText.toLowerCase();
                card.style.display = text.includes(val) ? 'flex' : 'none';
            });
        });

        // Chat Simulation
        function openChat(name) {
            const userNum = Math.floor(Math.random() * 1000);
            alert(`Connected as USER${userNum}. Chatting with ${name}... (Simulasi Real-time)`);
        }
    </script>
</body>
</html>
